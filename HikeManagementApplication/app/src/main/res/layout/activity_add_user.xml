<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <TextView
        android:id="@+id/textViewHikeApp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Hiker Entry Form"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/editHikeName"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Hike Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHikeApp"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Enter Hiker Email"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHikeName"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/editGender"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Hiker Gender"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Location"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGender"
        app:layout_constraintVertical_bias="0.027" />


    <TextView
        android:id="@+id/textViewDOB"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Choose Date of the Hike"
        android:textSize="20sp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLocation"
        app:layout_constraintVertical_bias="0.034" />

    <EditText
        android:id="@+id/editParking"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Parking Available"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDOB"
        app:layout_constraintVertical_bias="0.052" />

    <EditText
        android:id="@+id/editLength"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Length of the Hike"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDOB"
        app:layout_constraintVertical_bias="0.277" />

    <EditText
        android:id="@+id/editLevel"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Level of difficulty"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLength"
        app:layout_constraintVertical_bias="0.085" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLevel"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/btnAddHiker"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:text="Add Hiker"
        android:backgroundTint="@color/green1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDescription"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>