<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQualificationActivity">

    <TextView
        android:id="@+id/textViewQualification"
        android:layout_width="378dp"
        android:layout_height="85dp"
        android:text="Observation Entry Form"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/edit_q_name"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Observation Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQualification" />


    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Date of the observation"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_q_name" />

    <TextView
        android:id="@+id/textViewTTime"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Time of the observation"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime" />

    <EditText
        android:id="@+id/edit_q_comment"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Enter Additional Comment"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTTime" />

    <Button
        android:id="@+id/btnAddQualification"
        android:layout_width="179dp"
        android:layout_height="82dp"
        android:layout_marginTop="36dp"
        android:text="Add Observations"
        android:backgroundTint="@color/green1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_q_comment" />


</androidx.constraintlayout.widget.ConstraintLayout>