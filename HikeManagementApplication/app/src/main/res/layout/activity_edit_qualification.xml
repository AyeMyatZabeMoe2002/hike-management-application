<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditQualificationActivity">

    <TextView
        android:id="@+id/textViewEditQualification"
        android:layout_width="359dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Observation Edit Form"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Enter Observation Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditQualification"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="Choose Date of the Hike"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/editTime"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Time of the observation"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateTime" />

    <EditText
        android:id="@+id/editComment"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:hint="Enter Additional Comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTime"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btnUpdateQualification"
        android:layout_width="174dp"
        android:layout_height="67dp"
        android:text="Update Observation"
        android:backgroundTint="@color/green1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editComment"
        app:layout_constraintVertical_bias="0.485" />
</androidx.constraintlayout.widget.ConstraintLayout>