<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/q_imageView"
        android:layout_width="150dp"
        android:layout_height="450dp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/q_name_textView"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/q_time_textView"
        android:textSize="30sp"
        android:layout_width="250dp"
        android:layout_height="100dp"/>

        //
        <TextView
            android:id="@+id/q_tTime_textView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/q_comment_textView"
            android:textSize="30sp"
            android:layout_width="250dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btn_q_edit"
                android:src="@drawable/q_edit"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/btn_q_delete"
                android:src="@drawable/q_delete"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            </LinearLayout>

    </LinearLayout>

    <View
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>